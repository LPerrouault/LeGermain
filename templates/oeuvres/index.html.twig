{% extends 'base.html.twig' %}

{% block title %}Oeuvres - Picassouille{% endblock %}

{% block body %}
    <div class="container">
        <h2>Oeuvres</h2>
        <div class="row">
            <div class="col-2">{% include 'oeuvres/_filter.html.twig'  %}</div>
            <div class="col-10">
                <div class="mosaic">
                    {% for oeuvres in oeuvres %}
                        {% include 'oeuvres/_card.html.twig' %}
                    {% endfor %}
                </div>
                <div class="mt-4">
                    {{ knp_pagination_render(oeuvres) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
