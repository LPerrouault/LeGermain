{% extends 'base.html.twig' %}

{% block title %}Oeuvres - Picassouille{% endblock %}

{% block body %}
    <div class="oeuvre-title">
        <img src="{{ asset('/image/') | trans}}">
        <h2>Oeuvres</h2>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-md-2">{% include 'oeuvres/_filter.html.twig'  %}</div>
            <div class="col-md-10">
                <div class="grid">
                    {% for oeuvres in oeuvres %}
                        {% include 'oeuvres/_card.html.twig' %}
                    {% endfor %}
                </div>
                <div class="mt-4">
                    {{ knp_pagination_render(oeuvres) }}
                </div>
            </div>
        </div>
    </div>

{% endblock %}
