<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">

        <title>{% block title %}Accueil{% endblock %}- Picassouille</title>
        {# Run `composer require symfony/webpack-encore-bundle`
           and uncomment the following Encore helpers to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        <!-- Lien vers Bootstrap-->
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" 
              integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" 
              crossorigin="anonymous">

        <!-- Liens vers les polices d'écriture-->
        <!-- Rubik Bold-->
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Rubik:wght@700&display=swap" rel="stylesheet"> 
    </head>
    <body>
        <!-- Style CSS de la navigation ci-dessous -->
        <style>
            #page-container {
                position: relative;
                min-height: 100vh;
                margin-bottom: 0;
                padding-bottom: 0;
            }

            #content-wrap {
                padding-bottom: 8rem; /* Footer height */
            }

            #footer {
                position: absolute;
                bottom: 0;
                width: 100%;
                height: 8rem;         /* Footer height */
                padding: 20px 0px;
            }
            body {
                background-color: #F8F7F4;
                color: #2B2118;
            }
            .navbar, footer {
                background-color: #2B2118;
                font-family: 'Rubik', sans-serif;
            }
            footer {
                font-size: 14px;
            }
            .nav-link { 
                color: #DE955A;
            }
            .navbar-brand {
                width: 10em; 
                padding: 10px;
                margin: 0 10px;
            }
            .nav-item {
                padding-left: 5em;
            }
            .navbar-brand, .active, .nav-link:hover, .nav-link:active, footer{
                color: #F8F7F4;
            }
            #nav-links {
                margin-left: 10em;
            }
            hr {
                display: block; 
                height: 1px;
                border: 0; 
                border-top: 3px solid #AD1815;
                opacity: 1;
                border-radius: 10px;
                margin: 0 10px 10px 10px;
                background-color: #AD1815;
            }
            #copyright {
                text-align: center
            }

            #information-contact {
                line-height: 1.25em;
            }

            .pi-logo-reseau {
                max-width: 3em;
                height: auto;
                margin-left: 0.2em;
            }

            #reseaux {
                position: absolute;
                top: 25%;
                left: 75%;
                padding: 0px;
                max-width: fit-content;
            }
        </style>
        <div id="page-container">
            <div id="content-wrap">
                <!-- Navigation -->
                <nav class="navbar navbar-expand-md">
                    <!-- Logo Picassouille -->
                    <img class="navbar-brand" src="{{asset('images/logo/logo.png')}}" alt="Picassouille"/>
                    <!-- Bouton de collapse du menu (sur petit écrans)-->
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#collapsible-navbar">
                        <span class="navbar-toggler-icon"></span>
                    </button>

                    <!-- Eléments de navigation de la navbar-->
                    <div id="nav-links" class="container d-flex flex-column flex-md-row justify-content-between">
                        <div class="collapse navbar-collapse" id="collapsible-navbar">
                            <ul class="navbar-nav">
                                <!-- Dans la page de l'accueil, ajouter active dans le block nav_accueil
                                pour définir cette page comme la page active-->
                                <li class="nav-item">
                                    <a class="nav-link {% block nav_accueil %}{% endblock %}" href="{{ path('accueil') }}">Accueil</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link {% block nav_oeuvres %}{% endblock %}" href="{{ path('oeuvres') }}">Œuvres</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link {% block nav_news %}{% endblock %}" href="{{ path('news') }}">News</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link {% block nav_ateliers %}{% endblock %}" href="{{ path('ateliers') }}">Ateliers</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link {% block nav_contact %}{% endblock %}" href="{{ path('contact') }}">Contact</a>
                                </li>
                            </ul>
                        </div>
                    </div>
                    <hr>
                </nav>

                <!-- Contenu de la page -->
                {% block body %}{% endblock %}
            </div>
            <footer id="footer">
                <div class="container">
                    <div class='row'>
                        <div id='information-contact' class='col-8'>
                            Eugénie Picassouille<br>
                            11 route du test 37000 TOURS<br>
                            eugeniepicassouille@gmail.com<br>
                            0602060206
                        </div>
                        <div id='reseaux' class='col-4'>
                            <a href="https://facebook.com/">
                                <img class="pi-logo-reseau" src="{{asset('images/logo/logo_facebook.png')}}" alt="Facebook"/>
                            </a>
                            <a class="pi-logo-reseau" href="https://twitter.com/">
                                <img class="pi-logo-reseau" src="{{asset('images/logo/logo_twitter.png')}}" alt="Facebook"/>
                            </a>
                            <a class="pi-logo-reseau" href="https://instagram.com/">
                                <img class="pi-logo-reseau" src="{{asset('images/logo/logo_instagram.png')}}" alt="Facebook"/>
                            </a>
                            <a class="pi-logo-reseau" href="https://indeed.com/">
                                <img class="pi-logo-reseau" src="{{asset('images/logo/logo_indeed.png')}}" alt="Facebook"/>
                            </a>
                        </div>
                    </div>
                    <div class='row'>
                        <div id='copyright' class='col-12'>@ 2021 Eugénie Picassouille</div>
                    </div>
                </div>
            </footer>
        </div>

        <!--bouton top page-->
        <button onclick="function topFunction() {
                    document.body.scrollTop = 0;
                    document.documentElement.scrollTop = 0;
                }
                topFunction()" id="myBtn" title="Go to top">^
        </button>



        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}

        <!-- Accès à JQuery, Popper.js et JS de Bootstrap pour le bon fonctionnement de Bootstrap-->
        <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" 
                integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" 
                crossorigin="anonymous">
        </script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" 
                integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" 
                crossorigin="anonymous">
        </script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" 
                integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" 
                crossorigin="anonymous">
        </script>

    </body>
</html>
