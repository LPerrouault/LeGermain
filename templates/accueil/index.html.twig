{% block title %}Accueil{% endblock %}

{% block body %}
    <style>
        .pi_accueil_bg{
            background-image: url('{{asset("images_l3/maple.jpg")}}');
            background-repeat: no-repeat;
            background-size: contain;
        }
        #pi_case_logos {
            background-image: url('{{ asset('images_l3/licornes.jpg') }}');
