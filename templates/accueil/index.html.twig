            <tr>
                <td>
                    <button id="pi_logo_accueil_btn">
                        <a id="pi_txt_logo_accueil" href="{{ path('oeuvres') }}">Logo</a>
                    </button>
                </td>

                <td>
                    <button id="pi_illustrations_accueil_btn">
                        <a id="pi_txt_illustrations_accueil" href="{{ path('oeuvres') }}">Illustrations</a>
                    </button>
                </td>

                <td>
                    <button id="pi_affiches_accueil_btn">
