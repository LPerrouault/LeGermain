                <!--bouton voir plus d'affiches-->
                <td>
                    <button id="pi_voir_plus_button">
                        <a id="pi_txt_button" href="{{ path('oeuvres') }}">voir plus</a>
                    </button>
                </td>
            </tr>
        </table>

        <hr id="pi_hr_acceuil">

