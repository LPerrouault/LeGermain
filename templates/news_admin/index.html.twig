{% extends 'base.html.twig' %}

{% block title %}Picassouille- Administration{% endblock %}

{% block body %}
    <div class="container">
        <h2>News - Admin</h2>
        <div class="row">
            <div class="col-2">
                {% include 'news_admin/_filter.html.twig'  %}
            </div>
            <div class="col-10">
                <section>
                    <ul class="list">
                        {% for article in articles %}
                            {% include 'news_admin/_card.html.twig' %}
                        {% endfor %}
                    </ul>
                </section>
                <div class="mt-4">
                    {{ knp_pagination_render(articles) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
