{% extends 'base.html.twig' %}

{% block title %}Contact{% endblock %}

{% block body %}
    <style>
        .pi-error-message {
            color: #AD1815;
        }
    </style>
    <div class="pi-page">
        <div class="container">
            <h2>Besoin d'un renseignement?</h2>
            <div class='row'>
                <div class="pi-contact col-6">
                    {% form_theme form 'bootstrap_4_layout.html.twig' %}
                    {{ form_start(form, {'method' : 'POST', }) }}

                    <div class="pi-contact-form">
                        <div class="container">
                            <!-- Si des données incorrectes ont déjà été saisies -->
                            {% if error is defined %}
                                <div class="row pi-error-message pi-texte"><div class="col">Erreur : {{ error }}</div></div>
                            {% else %}
                                <br>
                            {% endif %}
                            <div class="row form-group">
                                <div class="col-2 pi-texte">
                                    Nom
                                </div>
                                <div class="col">
                                    {% if nom is defined %}
                                        {{ form_widget(form.nom, {'attr': {'value': nom}}) }}
                                    {% else %}
                                        {{ form_widget(form.nom) }}
                                    {% endif %}
                                </div>
                                <div class="col-2 pi-texte">
                                    Prénom
                                </div>
                                <div class="col">
                                    {% if prenom is defined %}
                                        {{ form_widget(form.prenom, {'attr': {'value': prenom}}) }}
                                    {% else %}
                                        {{ form_widget(form.prenom) }}
                                    {% endif %}
                                </div>
                            </div>

                            <div class="row form-group">
                                <div class="col-2 pi-texte">
                                    Email
                                </div>
                                <div class="col">
                                    {% if email is defined %}
                                        {{ form_widget(form.email, {'attr': {'value': email}}) }}
                                    {% else %}
                                        {{ form_widget(form.email) }}
                                    {% endif %}
                                </div>
                            </div>

                            <div class="row form-group">
                                <div class="col-2 pi-texte">
                                    Sujet
                                </div>
                                <div class="col">
                                    {% if sujet is defined %}
                                        {{ form_widget(form.sujet, {'attr': {'value': sujet}}) }}
                                    {% else %}
                                        {{ form_widget(form.sujet) }}
                                    {% endif %}
                                </div>
                            </div>

                            <div class="form-group">
                                {% if contenu is defined %}
                                    {{ form_widget(form.contenu, {'attr': {'value': contenu}}) }}
                                {% else %}
                                    {{ form_widget(form.contenu) }}
                                {% endif %}
                            </div>

                            <div class="row">
                                <div class="col">
                                    <button type="submit" id="form_save" name="form[save]" class="pi-btn-bleu pi-btn-texte">Envoyer</button>
                                </div>
                                <div class="col">
                                    <button type="reset" id="form_reset" name="form[reset]" class="pi-btn-rouge pi-btn-texte">Effacer</button>
                                </div>
                            </div>
                        </div>
                    </div>
                    {{ form_end(form) }}
                </div>

                <!-- Carte de taille max-width (largeur limitée à col-6) x 300 -->
                <iframe class="col-6"src="https://www.google.com/maps/embed?pb=!1m14!1m8!1m3!1d2702.827140619793!2d0.7013963!3d47.3567727!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x47fcd5e89bf4475b%3A0xe8018091db1e4271!2sUniversit%C3%A9%20de%20Tours%20-%20Facult%C3%A9%20des%20Sciences%20et%20Techniques!5e0!3m2!1sfr!2sfr!4v1638260245710!5m2!1sfr!2sfr" style="border:0;" height="320" allowfullscreen="" loading="lazy"></iframe>
            </div>
        </div>
    </div>
{% endblock %}
