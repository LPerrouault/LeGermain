{% extends 'base.html.twig' %}

{% block title %}Contact{% endblock %}

{% block body %}
    <div class="pi-page">
        <div class="container">
            <h2>Succès!</h2>
            <div class="pi-soustexte pi-texte-centre">Le message suivant a été envoyé</div>
            <br>
            <div class="row">
                <div class="col-2">
                    <h4>
                        De la part de:
                    </h4>
                </div>
                <div class="col">
                    <p class="pi-texte">
                        {{ mailcontact.nom }} {{ mailcontact.prenom }}
                    </p>
                </div>
            </div>
            <div class="row">
                <div class="col-2">
                    <h4>
                        À adresse:
                    </h4>
                </div>
                <div class="col">
                    <p class="pi-texte">
                        {{ mailcontact.email }}
                    </p>
                </div>
            </div>
            <div class="row">
                <div class="col-2">
                    <h4>
                        Sujet:
                    </h4>
                </div>
                <div class="col">
                    <p class="pi-texte">
                        {{ mailcontact.sujet }}
                    </p>
                </div>
            </div>
            <div class="row">
                <p class="pi-texte">
                    {{ mailcontact.contenu }}
                </p>
            </div>
            <br>
            <div class='row'>

                <button class="pi-btn-rouge" style='margin-left:auto; margin-right:auto; width:auto;'>
                    <a href="{{ path('accueil') }}" class='pi-btn-texte'>
                        Retour à l'accueil
                    </a>
                </button>

            </div>
        </div>
    </div>
{% endblock %}