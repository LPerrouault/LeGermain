{% extends 'base.html.twig' %}

{% block title %}Contact{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>

    <div class="example-wrapper">

        <header class="navbar">
            <a><a href="{{ path('accueil') }}">Accueil</a> <a href="{{ path('news') }}">News</a>
                <a href="{{ path('oeuvres') }}">Å’uvres</a> <a href="{{ path('ateliers') }}">Ateliers</a>
                <a href="{{ path('contact') }}">Contact</a>
        </header>

        <h2>Page de CONTACT</h2>
        <div>
            {{ form_start(form, {'method' : 'POST'}) }}
            {{ form_errors(form) }}

            <div>
                {{ form_row(form.nom) }}
                {{ form_row(form.prenom) }}
                {{ form_row(form.email) }}
                {{ form_row(form.sujet) }}
                {{ form_row(form.contenu) }}

                {{ form_row(form.save, {'label': 'Envoyer' }) }}
                {{ form_row(form.reset, {'label' : "Effacer"}) }}
                {{ form_end(form) }}
            </div>
        </div>
        <div>
            {% if error is defined %}
                {{ include('client/contact/erreur.html.twig') }}
            {% endif %}
        </div>
    </div>
{% endblock %}
